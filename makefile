# Makefile for your firewall project# Compiler settingsCC = g++CXXFLAGS = -std=c++11 -gLDFLAGS =# Source filesSOURCES = main.cpp packet_parser.cpp rule_manager.cppHEADERS = packet.h firewall_rule.h packet_parser.h rule_manager.hOBJECTS = $(SOURCES:.cpp=.o)EXECUTABLE = firewall# Default targetall: $(EXECUTABLE)# Compile source files$(EXECUTABLE): $(OBJECTS)	$(CC) $(LDFLAGS) $(OBJECTS) -o $@# Rule to compile .cpp files.SUFFIXES: .h .cpp.cpp.o:	$(CC) $(CXXFLAGS) -c $< -o $@# Clean up object files and executableclean:	rm -f $(OBJECTS) $(EXECUTABLE)